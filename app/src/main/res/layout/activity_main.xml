<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000000">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:text="Calculadora de Área" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:textSize="16sp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:textAllCaps="true"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="QUANTOS CM TEM O SEU REVESTIMENTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:textSize="14sp" android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF"/>
    <TextView
            android:text="QUANTOS METROS TEM A PAREDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/larguraRevestimento"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/larguraRevestimento"
            app:layout_constraintStart_toEndOf="@+id/alturaRevestimento"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="32dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textColor="#FFFFFF"
            android:textAlignment="center"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/larguraParede"
            app:layout_constraintStart_toEndOf="@+id/alturaParede"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="32dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:textColor="#FFFFFF" android:textAlignment="center"/>
    <TextView
            android:layout_width="349dp"
            android:layout_height="19dp" android:id="@+id/tituloResultado"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:textColor="#FFFFFF" android:singleLine="false"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:visibility="gone" android:text="RESULTADO"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="350dp"
            android:layout_height="44dp" android:id="@+id/resultadoDescricao"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:textColor="#FFFFFF" android:singleLine="false"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:visibility="gone"
            android:textAlignment="textStart" app:layout_constraintHorizontal_bias="0.484"
            android:paddingStart="20px" android:paddingEnd="10px"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/alturaRevestimento"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:hint="Altura"
            android:textSize="14sp" android:textAllCaps="true" android:singleLine="true"
            android:layout_marginStart="32dp" android:textAlignment="center" android:textColor="#FFFFFF"
            android:textColorHint="#8DFFFFFF" android:backgroundTint="#6200ee" android:linksClickable="true"
            android:minLines="1"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/larguraRevestimento"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:hint="Largura"
            android:textSize="14sp" android:textAllCaps="true" android:singleLine="true"
            android:layout_marginEnd="32dp" android:textAlignment="center" android:textColor="#FFFFFF"
            android:textColorHint="#8DFFFFFF" android:backgroundTint="#6200ee" android:linksClickable="false"
            android:minLines="1"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/alturaParede"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:hint="Altura"
            android:textSize="14sp" android:textAllCaps="true" android:singleLine="true"
            android:layout_marginTop="16dp" android:layout_marginStart="32dp" android:textAlignment="center"
            android:textColorHint="#8DFFFFFF" android:textColor="#FFFFFF"
            android:backgroundTint="#6200ee" android:minLines="1"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/larguraParede"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Largura"
            android:textSize="14sp" android:textAllCaps="true" android:singleLine="true"
            android:layout_marginTop="16dp" android:layout_marginEnd="32dp" android:textAlignment="center"
            android:textColorHint="#8DFFFFFF" android:textColor="#FFFFFF" android:backgroundTint="#6200ee"
            android:linksClickable="false" android:minLines="1"/>
    <Button
            android:text="Calcular"
            android:layout_width="0dp"
            android:layout_height="47dp" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/resultadoDescricao"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:backgroundTintMode="screen" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" android:layout_marginEnd="32dp" android:onClick="calculate"/>
</androidx.constraintlayout.widget.ConstraintLayout>